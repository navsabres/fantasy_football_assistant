# Fantasy Football Assistant Environment Variables
# Rename this file to .env and fill in your API keys

# NFL API Credentials
# Get these from https://api.nfl.com/
NFL_API_KEY=your_nfl_api_key_here

# ESPN API Credentials
# Get these from https://www.espn.com/apis/devcenter/docs/
ESPN_API_KEY=your_espn_api_key_here

# Sleeper API doesn't currently require authentication
# But we'll include it for future compatibility
SLEEPER_API_KEY=your_sleeper_api_key_here

# Optional: Custom League IDs
ESPN_LEAGUE_ID=your_espn_league_id
SLEEPER_LEAGUE_ID=your_sleeper_league_id

# Optional: Cache Directory
CACHE_DIR=./cache

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Feature Flags
ENABLE_ML_PREDICTIONS=false
ENABLE_WEATHER_IMPACT=false
